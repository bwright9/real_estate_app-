<h1>
  <%= @seller.name %>'s Homes
</h1>
<hr />

<% if @homes.any? %>
  <ul>
    <% @homes.each do |home| %>
      <li>
        <%= link_to home.name, seller_home_path(@seller, home) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h3>No homes, please add one!</h3>
<% end %>

<hr />

<%= link_to 'New home', new_seller_home_path(@seller) %>
<%= link_to 'Back', seller_path(@seller) %>